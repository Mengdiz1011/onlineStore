
<div class="shopper">
  <h1>Products Catelog</h1>

  <%# customized table %>
  <table class="shopper">
    <tbody>
      <% @products.each do |product| %>
        <div class="entry">
          <%= image_tag product.image %>
          <h3><%= product.name %></h3>
          <p><%= sanitize(product.description) %></p>
          <div class="price_line">
              <span class="price"><%= product.price %></span>
          </div>

        </div>
      <% end %>
    </tbody>
  </table>
</div>
