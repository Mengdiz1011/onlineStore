<div class="products">
<h1>Products</h1>
<p id="notice"><%= notice %></p>
<table>

    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_even', 'list_line_odd') %>">
        <td><%= image_tag product.image, :class => "list_image"%></td>
      
        <td class="list_description">
          <dl>
            <dt><%= product.name %></dt>
            <dd><%= product.description %></dd>
            <dd><%= product.price %></dd>
          </dl>
        </td> 
        
        <td class="list_actions">
          <dt><%= link_to 'Show', product %></dt>
          <dt><%= link_to 'Edit', edit_product_path(product) %></dt>
          <dt><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></dt>
        </td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
</div>
